$(document).ready(function(){
    var wrapper = $('#wrapper');
    var card = $('.card');
    var editPanel = card.find('.panel-form');
    (function sideBar(){
         var options = { direction: 'left' };
         var duration = 400;
         var sideBar = wrapper.find('.leftbar');
         var buttonNav = wrapper.find('.navbar').find('.btn');
         buttonNav.on('click', function() {
             sideBar.toggle('slide', options, duration);
         })
     }());
    (function dropdownMenu() {
        var mainMenu = $('.main-menu').find(" li.dropdown > a");
        mainMenu.on('click', function(e) {
            e.preventDefault();
            $(this).closest('.dropdown').find('.sub-menu').slideToggle();
        });
    }());
    (function editPanelOpen(){
        var metaBtn = card.find('.meta-btn');
        var closePanel = editPanel.find('.close-btn');
        editPanel.hide();
        metaBtn.on('click', function(e) {
            e.preventDefault();
            $(this).parent().siblings('.panel-form').slideToggle();
        });
        closePanel.on('click', function(e){
            e.preventDefault();
            $(this).closest('.panel-form').slideToggle();
        });
    }());
    (function showPopup(){

        var btnPopup = $('.sharing-block').find('.openPopup');
        $(btnPopup).on('click', function(e) {
            e.preventDefault();
            $(this).closest('.upload-form').find('.popup-window').slideToggle();
        })
    }())
});